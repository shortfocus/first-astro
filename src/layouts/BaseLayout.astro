---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { siteConfig } from "@/config/site.config";
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{siteConfig.name}</title>
    <meta name="description" content={siteConfig.description} />

    <!-- Open Graph -->
    <meta property="og:title" content={siteConfig.name} />
    <meta property="og:description" content={siteConfig.description} />
    <meta property="og:type" content="website" />
  </head>
  <body class="flex min-h-screen flex-col bg-slate-950 text-slate-100">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <!-- 채널 채팅 버튼 (위) -->
    <div
      id="kakao-talk-channel-chat-button"
      class="fixed bottom-24 right-6 z-50"
      data-channel-public-id="_xkxmzqX"
      data-title="consult"
      data-size="large"
      data-color="yellow"
      data-shape="pc"
      data-support-multiple-densities="true"
    ></div>
    <!-- 채널 추가 버튼 (아래) -->
    <div
      id="kakao-talk-channel-add-button"
      class="fixed bottom-6 right-6 z-50"
      data-channel-public-id="_xkxmzqX"
      data-size="large"
      data-support-multiple-densities="true"
    ></div>
  </body>
  <script is:inline>
    window.kakaoAsyncInit = function() {
      Kakao.Channel.createChatButton({
        container: '#kakao-talk-channel-chat-button',
      });
      Kakao.Channel.createAddChannelButton({
        container: '#kakao-talk-channel-add-button',
      });
    };

    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = 'https://t1.kakaocdn.net/kakao_js_sdk/2.7.4/kakao.channel.min.js';
      js.integrity = 'sha384-8oNFBbAHWVovcMLgR+mLbxqwoucixezSAzniBcjnEoumhfIbMIg4DrVsoiPEtlnt';
      js.crossOrigin = 'anonymous';
      fjs.parentNode.insertBefore(js, fjs);
    })(document, 'script', 'kakao-js-sdk');
  </script>
</html>
