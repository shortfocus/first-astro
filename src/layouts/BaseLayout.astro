---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { siteConfig } from "@/config/site.config";
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{siteConfig.name}</title>
    <meta name="description" content={siteConfig.description} />

    <!-- Open Graph -->
    <meta property="og:title" content={siteConfig.name} />
    <meta property="og:description" content={siteConfig.description} />
    <meta property="og:type" content="website" />
  </head>
  <body class="flex min-h-screen flex-col bg-slate-950 text-slate-100">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <!-- 카카오톡 플로팅: 클릭 시 카카오 페이지로 바로 이동 -->
    <div class="fixed bottom-6 right-6 z-50 flex flex-col gap-3">
      <a
        href="https://pf.kakao.com/_xkxmzqX/chat"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-1.5 rounded-full bg-[#FEE500] px-5 py-3 text-[#191919] shadow-lg transition hover:scale-105 hover:shadow-xl"
        aria-label="톡상담"
      >
        <span class="text-sm font-bold">톡상담</span>
      </a>
      <a
        href="https://pf.kakao.com/_xkxmzqX"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-1.5 rounded-full bg-[#FEE500] px-5 py-3 text-[#191919] shadow-lg transition hover:scale-105 hover:shadow-xl"
        aria-label="채널 추가"
      >
        <span class="text-sm font-bold">채널 추가</span>
      </a>
    </div>
  </body>
</html>
