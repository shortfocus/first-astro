---
import { siteConfig } from "@/config/site.config";
const year = new Date().getFullYear();
---

<footer class="border-t border-slate-800 bg-slate-950">
  <div class="mx-auto max-w-6xl px-6 py-10">
    <div
      class="flex flex-col gap-8 md:flex-row md:items-center md:justify-between"
    >
      {/* Brand */}
      <div>
        <div class="text-lg font-bold text-slate-100">
          {siteConfig.name}
        </div>
        <p class="mt-2 text-sm text-slate-400">
          {siteConfig.description}
        </p>
      </div>

      {/* Links */}
      <nav class="flex gap-6 text-sm">
        <a href="#features" class="text-slate-400 hover:text-white"> 특징 </a>
        <a href="#pricing" class="text-slate-400 hover:text-white"> 가격 </a>
        <a href="#contact" class="text-slate-400 hover:text-white"> 문의 </a>
      </nav>
    </div>

    {/* Divider */}
    <div class="mt-8 border-t border-slate-800 pt-6 text-sm text-slate-500">
      © {year}. {siteConfig.name}. All rights reserved.
    </div>
  </div>
</footer>
