---
import { siteConfig } from "@/config/site.config";
---

<section class="relative overflow-hidden">
  <div class="mx-auto max-w-6xl px-6 py-24 text-center">
    <h1
      class="text-4xl font-extrabold tracking-tight text-slate-100 sm:text-5xl"
    >
      {siteConfig.hero.title}
    </h1>

    <p class="mx-auto mt-6 max-w-2xl text-lg text-slate-400">
      {siteConfig.hero.subtitle}
    </p>

    <div class="mt-10 flex justify-center gap-4">
      <a
        href="#contact"
        class="inline-flex items-center rounded-xl bg-cyan-500 px-6 py-3 text-sm font-semibold text-slate-900 hover:bg-cyan-400 transition"
      >
        {siteConfig.hero.ctaText}
      </a>

      <a
        href="#features"
        class="inline-flex items-center rounded-xl border border-slate-700 px-6 py-3 text-sm font-semibold text-slate-100 hover:bg-slate-900 transition"
      >
        더 알아보기
      </a>
    </div>
  </div>
</section>
