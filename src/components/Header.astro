---
import { siteConfig } from "@/config/site.config";
---

<header class="border-b border-slate-800 bg-slate-950">
  <div class="mx-auto flex h-16 max-w-6xl items-center justify-between px-6">
    {/* Logo */}
    <div class="text-lg font-bold text-slate-100">
      {siteConfig.name}
    </div>

    {/* Navigation */}
    <nav class="hidden items-center gap-8 md:flex">
      <a href="#features" class="text-sm text-slate-300 hover:text-white">
        특징
      </a>
      <a href="#pricing" class="text-sm text-slate-300 hover:text-white">
        가격
      </a>
      <a href="#contact" class="text-sm text-slate-300 hover:text-white">
        문의
      </a>
    </nav>

    {/* CTA */}
    <a
      href="#contact"
      class="rounded-md bg-cyan-400 px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-cyan-300"
    >
      문의하기
    </a>
  </div>
</header>
