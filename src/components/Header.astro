---
import { siteConfig } from "@/config/site.config";
---

<header
  class="sticky top-0 z-50 border-b border-slate-800 bg-slate-950/80 backdrop-blur"
>
  <div class="mx-auto flex h-16 max-w-6xl items-center justify-between px-6">
    <!-- 로고 -->
    <a href="/" class="text-lg font-bold text-slate-100">
      {siteConfig.name}
    </a>

    <!-- 메뉴 -->
    <nav class="hidden gap-6 text-sm text-slate-300 md:flex">
      <a href="#features" class="hover:text-cyan-400">특징</a>
      <a href="#pricing" class="hover:text-cyan-400">요금</a>
      <a href="#contact" class="hover:text-cyan-400">문의</a>
    </nav>

    <!-- CTA -->
    <a
      href="#contact"
      class="rounded-lg bg-cyan-500 px-4 py-2 text-sm font-semibold text-slate-900 hover:bg-cyan-400 transition"
    >
      상담하기
    </a>
  </div>
</header>
